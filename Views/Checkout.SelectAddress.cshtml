@using bookstore.ViewModels
@{
    var addresses = (AddressesViewModel) Model.Addresses;

    Style.Require("bookstore.Common");
}
<h2>Address Details</h2>
<p>@T("Please provide us with your billing address.")</p>
 
@using (Html.BeginFormAntiForgeryPost(Url.Action("SelectAddress", "Checkout", new { area = "bookstore" }))) {
    <article class="form">
    
        @Html.EditorFor(m => addresses.BillingAddress)
    
        <footer class="commands">
            <ul>
                <li class="align left"><a href="#">@T("Cancel")</a></li>
                <li class="align right"><button type="submit">@T("Next")</button></li>
            </ul>
        </footer>
    </article>
}